
@{
    Layout = null;
}
@model List<Movie>

<h2>Movie List</h2>

@*Result message section:
    Any previously saved Movie processing messages are saved in ViewData
    and will be purged after it is displayed.
*@
@if (ViewData["MovieAddCartMessage"] != null)
{
    <div class="app-message">
        <p>@ViewData["MovieAddCartMessage"]</p>
    </div>
    ViewData["MovieAddCartMessage"] = null;
}
@if (TempData["MovieAddCartMessage"] != null)
{
    <div class="app-message">
        <p>@TempData["MovieAddCartMessage"]</p>
    </div>
    TempData["MovieAddCartMessage"] = null;
}

<div id="movie-list">
    <table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Actors</th>
            <th>Directors</th>
        </tr>
        @foreach (Movie movie in Model)
        {
            <tr>
                <td>@movie.ID</td>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>@movie.Actors</td>
                <td>@movie.Directors</td>
            </tr>
        }
    </table>
</div>