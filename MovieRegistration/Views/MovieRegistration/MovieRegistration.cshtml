@{
    ViewData["Title"] = "Movie Registration";
}
@model Movie
<h2 style="background-color: limegreen; color: white;">Movie Registration</h2>

@*Result message section:
    Any previously saved Movie processing messages are saved in
    ViewData/TempData and will be purged after it is displayed.
*@
@if (ViewData["MovieResultMessage"] != null)
{
    <div class="app-message">
        <p>@ViewData["MovieResultMessage"]</p>
    </div>
    ViewData["MovieResultMessage"] = null;
    TempData["MovieResultMessage"] = null;
}
else if (TempData["MovieResultMessage"] != null)
{
    <div class="app-message">
        <p>@TempData["MovieResultMessage"]</p>
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form action="Register" method="get">
    <div>
        <table>
            <tr>
                <td><label for="ID">ID</label></td>
                <td>
                    <input type="number" name="ID" id="ID" min="0" placeholder="ID" required />
                </td>
            </tr>
            <tr>
                <td><label for="Title">Title</label></td>
                <td>
                    <input type="text" name="Title" id="Title" maxlength="50" pattern="[ '\" a-zA-Z]+" placeholder="Title" required />
                </td>
            </tr>
            <tr>
                <td><label for="RunTimeMins">Run Time (minutes)</label></td>
                <td>
                    <input type="number" name="RunTimeMins" id="RunTimeMins" min="0" placeholder="Run Time (minutes)" required />
                </td>
            </tr>
            <tr>
                <td><label for="Genre">Genre</label></td>
                <td>
                    <select name="Genre" id="Genre">
                        <option>Action</option>
                        <option>Comedy</option>
                        <option>Documentary</option>
                        <option>Drama</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><label for="Year">Year</label></td>
                <td>
                    <input type="number" name="Year" id="Year" min="1880" max="@DateTime.Now.Year" placeholder="Year" required />
                </td>
            </tr>
            <tr>
                <td><label for="Actors">Actors</label></td>
                <td><input type="text" name="Actors" id="Actors" placeholder="Actors" /></td>
            </tr>
            <tr>
                <td><label for="Directors">Directors</label></td>
                <td><input type="text" name="Directors" id="Directors" placeholder="Directors" /></td>
            </tr>
        </table>
        <br />
        <input type="submit" value="Register" />
    </div>
</form>
